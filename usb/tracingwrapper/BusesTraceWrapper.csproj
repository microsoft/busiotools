<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <!-- Make a single-file exe -->
    <PublishSingleFile>true</PublishSingleFile>

    <!-- Self-contained so users don't need the .NET runtime installed -->
    <SelfContained>true</SelfContained>

    <!-- Build matrix of Windows x64 + Arm64 -->
    <RuntimeIdentifiers>win-x64;win-arm64</RuntimeIdentifiers>

      <!-- Recommended for single-file size/perf tradeoffs -->
    <IncludeNativeLibrariesForSelfExtract>true</IncludeNativeLibrariesForSelfExtract>
    <EnableCompressionInSingleFile>true</EnableCompressionInSingleFile>

    <!-- Optional: reduce pdbs in output -->
    <DebugType>None</DebugType>
    <InvariantGlobalization>false</InvariantGlobalization>

    <!-- Trimming can break reflection-heavy code; leave off unless you audit -->
    <PublishTrimmed>false</PublishTrimmed>

  </PropertyGroup>

</Project>
